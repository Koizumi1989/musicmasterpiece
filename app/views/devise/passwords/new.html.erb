<h2 class="exhibition text-center">パスワードをお忘れですか?</h2><br><br>

<%= form_with model: @user, url: user_password_path, method: :post do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-center">
    <i class="fas fa-envelope"></i> </i><%= f.label :メールアドレス %>
    <%= f.email_field :email, size: "28x5", autofocus: true, autocomplete: "email" %>
  </div><br>

  <div class="actions text-center">
    <%= f.submit "パスワードリセットのための方法を送信する。", class: "btn btn-danger"  %>
  </div>
<% end %>
