<h2>パスワードをお忘れですか?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードリセットのための方法を送信する。" %>
  </div>
<% end %>

<%= link_to "新規登録", new_user_registration_path,class: 'btn btn-sm btn-outline-secondary mt-2' %><br>
<%= link_to "ログイン", new_user_session_path,class: 'btn btn-sm btn-outline-secondary mt-2' %>

