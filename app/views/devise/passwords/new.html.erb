<h2>パスワードをお忘れですか?</h2>

<%= form_with model: @user, url: user_password_path, method: :post do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードリセットのための方法を送信する。" %>
  </div>
<% end %>
