<div class="container">

<!--エラーメッセージ-->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <br>
  <h2 class="exhibition" style="display:inline">会員情報編集</h2>
  <br><br>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= form_with model: @user, url: user_path(@user), method: :patch, local:true do |f| %>
      <div class="form-group">
        <div class="row">
          <label for="item_image" class="col-sm-3 col-form-label pt-0">画像</label>
          <div class="col-sm-9">
          <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <label for="name" class="col-sm-3 col-form-label pt-0">名前</label>
          <div class="col-sm-9">
           <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <label for="introduction" class="col-sm-3 col-form-label pt-0">紹介</label>
          <div class="col-sm-9">
           <%= f.text_area :introduction, size: "40x5" %>
          </div>
        </div>
      </div>

      <div class="form-group" style="margin-left: 125px;">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <div class="mt-3"><%= link_to "退会", unsubscribe_users_path, class: "btn btn-danger" %></div>
      </div>
     <% end %>
   </div>
  </div>
</div>