<div class="container">
  <br>
  <h2 style="display:inline">会員情報編集</h2>
  <br><br>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= form_with model: @user, url: user_path(@user), method: :patch, local:true do |f| %>
      <div class="form-group">
        <div class="row">
          <label for="item_image" class="col-sm-3 col-form-label">画像</label>
          <div class="col-sm-9">
          <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <label for="name" class="col-sm-3 col-form-label">名前</label>
          <div class="col-sm-9">
           <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <label for="introduction" class="col-sm-3 col-form-label">紹介</label>
          <div class="col-sm-9">
           <%= f.text_area :introduction, size: "40x5" %>
          </div>
        </div>
      </div>

      <div class="form-group mx-auto">
        <%= f.submit "更新", class: "btn btn-success" %>
      </div>
     <% end %>
   </div>
  </div>
</div>