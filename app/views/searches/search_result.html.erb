<h3><%= @range %> search for "<%= @word %>"</h3>

<table class='table'>
  <% if @range == "User" %>
      <% @users.each do |u| %>
      <thead class="bg-light text-dark">
        <tr>
          <th>画像</th>
          <th>名前</th>
          <th>紹介</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= image_tag u.get_image, size: "50x50" %>
          </td>
          <td><%= u.name %></td>
          <td><%= u.introduction %></td>
          <td><%= link_to "詳細", user_path(u.id), class: "btn btn-sm btn-success" %></td>
        </tr>
  <% end %>
      </tbody>
  <% else %>
      <thead>
        <tr>
          <th>名盤画像</th>
          <th>アーティスト</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>評価</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
          <% @master_pieces.each do |m| %>
          <tr>
            <td><%= image_tag m.get_image, size: "50x50" %></td>
            <td><%= m.artist %></td>
            <td><%= m.title %></td>
            <td><%= m.jenre %></td>
            <td></td>
            <td><%= link_to "詳細", master_piece_path(m.id), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
  <% end %>
</table>