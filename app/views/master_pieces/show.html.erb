<h2>名盤紹介</h2>

<div class="container">
  <div class="row">
    <div class="card" style="width: 18rem;">
  <div class="bd-placeholder-img card-img-top">
    <%= image_tag 'record.jpg', size: '50x50' %>
  </div>

  <div class="card-body">
    <p>投稿者：<%= @master_piece.user.name %></p>
    <p>投稿日時：<%= @master_piece.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    <p>アーティスト：<%= @master_piece.artist %></p>
    <p>タイトル：<%= @master_piece.title%></p>
    <p>ジャンル：<%= @master_piece.jenre %></p>
    <p>説明：<%= @master_piece.introduction %></p>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <span id="rate<%= @master_piece.id %>">評価：</span>
      <script>
        $('#rate<%= @master_piece.id%>').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: '@master_piece[rate]',
          half: true,
          readOnly: true,
          score: <%= @master_piece.rate %>,
        });
      </script>
    </li>

    <li class="list-group-item">
      <spna class="like"><%= render 'likes/like', master_piece: @master_piece %></spna>
    </li>
  </ul>

  <div class="card-body">
    <% if current_user.id == @master_piece.user_id %>
      <span><%= link_to '編集', edit_master_piece_path(@master_piece), class: "btn btn-sm btn-success" %></span>
      <span><%= link_to '消去', @master_piece, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></span>
    <% end %>
  </div>

  <div class="card-body">
    <div class="comment-index">
      <%= render 'master_piece_comments/index', master_piece: @master_piece %>
    </div>
  </div>

  <div class ="card-body">
    <div class="comment">
      <%= render 'master_piece_comments/comments_form', master_piece: @master_piece,master_piece_comment: @master_piece_comment %>
    </div>
  </div>

</div>
  </div>
</div>